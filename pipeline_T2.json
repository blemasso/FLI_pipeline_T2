{
  "name": "pipeline_T2",
  "tool-version": "0.1",
  "description": "Pipeline for relaxometry T2 estimation",
  "command-line": "pipeline_T2.sh [NIFTI_IMAGE] [JSON_FILE] [THRESHOLD] [OUTPUT_ARCHIVE]",
  "docker-image": "glatard/pipeline_t2",
  "docker-index": "http://index.docker.io",
  "schema-version": "0.2",
  "inputs": [
    {
      "id": "nifti_image",
      "name": "Nifti image",
      "type": "File",
      "description": "A Nifti image",
      "command-line-key": "[NIFTI_IMAGE]",
      "optional": false
    },
    {
      "id": "json_file",
      "name": "JSON file",
      "type": "File",
      "description": "A JSON file",
      "command-line-key": "[JSON_FILE]",
      "optional": false
    },
    {
      "id": "threshold",
      "name": "Threshold",
      "type": "Number",
      "description": "A threshold value",
      "command-line-key": "[THRESHOLD]",
      "optional": false
    }
  ],
  "output-files": [
    {
      "id": "output_archive",
      "name": "Output files",
      "description": "Output files",
      "path-template": "[NIFTI_IMAGE].zip",
      "optional": false
    }
  ]
}

